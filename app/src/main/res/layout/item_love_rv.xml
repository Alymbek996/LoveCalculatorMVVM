<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="12dp"
    android:layout_margin="15dp"
    android:background="#FF1744"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/heartOne"
        android:layout_marginStart="105dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/percentage"
        app:layout_constraintBottom_toBottomOf="@id/percentage"
        app:lottie_autoPlay="true"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/heartTwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_autoPlay="true"
        android:layout_marginEnd="110dp"
        app:layout_constraintTop_toTopOf="@id/percentage"
        app:layout_constraintBottom_toBottomOf="@id/percentage"
        android:layout_width="50dp"
        android:layout_height="50dp"/>


    <TextView
        android:id="@+id/firstName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:text="FirstName"

        android:textColor="#1DE9B6"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/divide"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/firstName"
        app:layout_constraintEnd_toEndOf="@id/secondName"
        android:layout_width="wrap_content"
        android:text="  -  "
        android:textColor="#1DE9B6"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/secondName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:text="secondName"
        android:textColor="#1DE9B6"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/percentage"
        app:layout_constraintTop_toBottomOf="@id/divide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="25dp"
        android:layout_width="wrap_content"
        android:text="percentage%"
        android:textColor="#1DE9B6"
        android:textSize="16sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/result"
        app:layout_constraintTop_toBottomOf="@id/percentage"
       app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="25dp"
        android:layout_width="wrap_content"
        android:text="result"
        android:textColor="#1DE9B6"
        android:textSize="16sp"
        android:layout_height="wrap_content"/>





</androidx.constraintlayout.widget.ConstraintLayout>